<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password | LuxeLook</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #F2E8DC;
    }

    /* Banner */
    .account-banner {
      background: url('/images/banner-reset.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }
    .account-title {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
      text-shadow: 1px 1px 4px #fff;
    }

    /* Content Container */
    .reset-container {
      max-width: 650px;
      margin: 40px auto;
      background: #fff;
      padding: 35px 30px;
      border-radius: 12px;
      box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
    }

    .form-label {
      font-weight: 500;
      font-size: 14px;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #ccc;
      padding: 10px;
      font-size: 14px;
    }

    .submit-btn, .return-btn {
      background: linear-gradient(90deg, #B5654B, #D17C63);
      border: none;
      color: white;
      padding: 10px 30px;
      border-radius: 25px;
      font-size: 15px;
      transition: 0.3s;
    }

    .submit-btn:hover, .return-btn:hover {
      opacity: 0.9;
    }

    .Error-message {
      color: red;
      font-size: 13px;
      display: none;
    }

    /* MOBILE RESPONSIVE */
    @media (max-width: 768px) {
      .account-banner {
        height: 180px;
      }

      .account-title {
        font-size: 28px;
        bottom: 20px;
      }

      .reset-container {
        margin: 20px 10px;
        padding: 25px 20px;
      }

      .submit-btn, .return-btn {
        width: 100%;
        margin-left: 0 !important;
        text-align: center;
        margin-top: 10px;
      }
    }
  </style>
</head>

<body>

  <!-- Banner -->
  <div class="account-banner">
    <div class="account-title">RESET PASSWORD</div>
  </div>

  <!-- Content -->
  <div class="reset-container">

    <h4 class="text-center fw-bold mb-4">Reset your password</h4>

    <form id="resetform" class="row g-3">

      <div class="col-12">
        <label class="form-label">New Password</label>
        <input type="password" id="newPassword" class="form-control">
        <div id="resetPassError1" class="Error-message"></div>
      </div>

      <div class="col-12">
        <label class="form-label">Confirm New Password</label>
        <input type="password" id="confirmPassword" class="form-control">
        <div id="resetPassError2" class="Error-message"></div>
      </div>

      <div class="col-12 text-center mt-3">
        <button type="submit" class="submit-btn me-2">Submit</button>
        <a href="/profile" class="return-btn text-decoration-none">Return Back</a>
      </div>

    </form>
  </div>

<script>
  document.getElementById("resetform").addEventListener("submit", async function (e) {
    e.preventDefault();

    const newPassword = document.getElementById("newPassword").value.trim();
    const confirmPassword = document.getElementById("confirmPassword").value.trim();

    const error1 = document.getElementById("resetPassError1");
    const error2 = document.getElementById("resetPassError2");

    error1.style.display = "none";
    error2.style.display = "none";

    const strongPassword =  /^(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
    let isValid = true;

    if (!strongPassword.test(newPassword)) {
      error1.innerHTML = "Password must include letters, numbers & symbols (min 8 chars).";
      error1.style.display = "block";
      isValid = false;
    }

    if (newPassword !== confirmPassword) {
      error2.innerHTML = "Passwords do not match.";
      error2.style.display = "block";
      isValid = false;
    }

    if (!isValid) return;

    try {
      const response = await axios.post("/profile/reset-password", {newPassword, confirmPassword},{ validateStatus: (status) => status !== 500 });

      if (response.data.success) {
        Swal.fire("Success", response.data.message, "success")
          .then(() => window.location.href = "/profile");
      } else {
        Swal.fire("Error", response.data.message, "error");
      }
    } catch (error) {
      Swal.fire("Error", "Server error. Try again.", "error");
    }
  });
</script>

</body>
</html>
