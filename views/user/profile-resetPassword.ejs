<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password | LuxeLook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #F2E8DC;
    }
    .account-banner {
      background: url('/images/banner-reset.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }
    .account-title {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
    }
    .account-wrapper {
      display: flex;
      margin-top: 40px;
    }
    .sidebar {
      width: 220px;
      background: #f3f3f3;
      padding: 30px 20px;
    }
    .sidebar h6 {
      font-weight: 600;
      margin-bottom: 20px;
      text-transform: uppercase;
      font-size: 14px;
    }
    .sidebar ul {
      padding-left: 0;
      list-style: none;
    }
    .sidebar ul li {
      padding: 8px 0;
      font-size: 14px;
      font-weight: 500;
    }
    .sidebar ul li.active {
      font-weight: bold;
    }
    .content-area {
      flex: 1;
      padding: 30px 40px;
    }
    .form-label {
      font-weight: 500;
      font-size: 14px;
    }
    .form-control {
      border-radius: 0;
      border: 1px solid #ccc;
      padding: 10px;
      font-size: 14px;
    }
    .submit-btn {
      background: linear-gradient(90deg, #B5654B, #D17C63);
      border: none;
      color: white;
      padding: 10px 30px;
      border-radius: 25px;
      font-size: 15px;
      transition: 0.3s;
      margin-left: 187px;
    }
    .return-btn {
      background: linear-gradient(90deg, #B5654B, #D17C63);
      border: none;
      color: white;
      padding: 10px 30px;
      border-radius: 25px;
      font-size: 15px;
      transition: 0.3s;
      margin-left: 10px;
      text-decoration: none;
    }
    .submit-btn:hover {
      background-color: #44b0bb;
    }
    .Error-message {
      color: red;
      font-size: 13px;
      display: none;
    }
    .back-arrow-btn {
    position: absolute;
    top: 247px;
    left: 25px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    border-radius: 50%;
    width: 45px;
    height: 45px;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .back-arrow-btn:hover {
    background-color: #B5654B;
    color: white;
    transform: scale(1.1);
  }
  </style>
</head>
<body>

  <!-- Banner -->
  <div class="account-banner">
    <div class="account-title">RESET-PASSWORD</div>
  </div>

  <!-- Wrapper -->
  <div class="container-fluid account-wrapper">
    <div class="content-area">
      <h5 class="mb-4 fw-bold" style="margin-left: 350px;">Reset your password</h5>

      <form id="resetform" class="row g-3" style="padding-left: 350px;">
        <div class="col-md-4">
          <label class="form-label">New Password</label>
          <input type="password" id="newPassword" class="form-control" name="newPassword" >
          <div id="resetPassError1" class="Error-message"></div>
        </div>
        <div class="col-md-4">
          <label class="form-label">Confirm New Password</label>
          <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" >
          <div id="resetPassError2" class="Error-message"></div>
        </div>

        <div class="col-12 mt-3">
          <button type="submit" class="submit-btn">Submit</button>
          <a href="/profile" class="return-btn">Return Back</a>
        </div>
      </form>
    </div>
  </div>

  <script>
  document.getElementById("resetform").addEventListener("submit", async function (e) {
    e.preventDefault();

    const newPassword = document.getElementById("newPassword").value.trim();
    const confirmPassword = document.getElementById("confirmPassword").value.trim();

    const error1 = document.getElementById("resetPassError1");
    const error2 = document.getElementById("resetPassError2");

    error1.style.display = "none";
    error2.style.display = "none";

    // Strong password rule:
    // Minimum 8 chars, at least 1 letter, 1 digit
    const strongPassword =  /^(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
    let isValid = true;

    // Password validation
    if (!strongPassword.test(newPassword)) {
      error1.innerHTML = "Password must be at least 8 characters long and include both letters and numbers.";
      error1.style.display = "block";
      isValid = false;
    }

    // Password match
    if (newPassword !== confirmPassword) {
      error2.innerHTML = "Passwords do not match.";
      error2.style.display = "block";
      isValid = false;
    }

    if (!isValid) return; // STOP submit if invalid

    // Submit
    try {
      const response = await axios.post("/profile/reset-password", {
        newPassword,
        confirmPassword
      }, {
        headers: { "Content-Type": "application/json" }
      });

      if (response.data.success) {
        Swal.fire("Success", response.data.message || "Password updated successfully!", "success")
          .then(() => window.location.href = "/profile");
      } else {
        Swal.fire("Error", response.data.message || "Something went wrong", "error");
      }
    } catch (error) {
      const message = error.response?.data?.message || "Server error. Please try again.";
      Swal.fire("Error", message, "error");
    }
  });
</script>

</body>
</html>
