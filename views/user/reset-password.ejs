<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reset Password | LuxeLook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            background-color: #fcece7;
        }

        /* LEFT SECTION (shown only on laptop/desktop) */
        .left-section {
            width: 50%;
            background: url('/images/signup_image.jpeg') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .left-section img {
            width: 80%;
        }

        /* RIGHT SECTION (form area) */
        .right-section {
            width: 50%;
            background-color: #fcece7;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .form-box {
            text-align: center;
            max-width: 350px;
            width: 100%;
        }

        .form-control {
            border: none;
            border-bottom: 1px solid #475569;
            border-radius: 0;
            margin-bottom: 20px;
            padding: 10px 5px;
            background-color: transparent;
            font-size: 15px;
        }

        .btn-custom {
            background-color: #0f172a;
            color: #f8fafc;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            width: 100%;
            margin-top: 10px;
        }

        .btn-custom:hover {
            background-color: #1e293b;
        }

        .Error-message {
            color: red;
            font-size: 13px;
            margin-bottom: 10px;
            display: none;
        }

        /* ============================
            MOBILE / TABLET RESPONSIVE
        =============================*/
        @media (max-width: 992px) {
            body {
                flex-direction: column;
                background-color: #fcece7;
            }

            .left-section {
                display: none !important;   /* Hides left section completely */
            }

            .right-section {
                width: 100% !important;
                padding: 50px 25px;
            }

            .form-box {
                max-width: 400px;
            }
        }
    </style>
</head>

<body>

    <!-- LEFT SECTION (Hidden on mobile) -->
    <div class="left-section">
        <img src="/images/logo_forWhite.png" alt="LuxeLook Logo">
    </div>

    <!-- RIGHT SECTION -->
    <div class="right-section">
        <div class="form-box">
            <h3>Reset Your Password</h3>
            <p>Set a strong password to keep your account secure.</p>

            <form id="resetform">
                <div id="resetPassError1" class="Error-message"></div>

                <input type="password" name="newPassword" id="newPassword"
                    class="form-control" placeholder="New Password" required>

                <div id="resetPassError2" class="Error-message"></div>

                <input type="password" name="confirmPassword" id="confirmPassword"
                    class="form-control" placeholder="Confirm Password" required>

                <% if(message){ %>
                <div class="alert alert-danger text-center"><%= message %></div>
                <% } %>

                <button class="btn btn-custom" type="submit">Submit</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const passwordID = document.getElementById("newPassword");
    const CpasswordID = document.getElementById("confirmPassword");
    const resetPassError1 = document.getElementById("resetPassError1");
    const resetPassError2 = document.getElementById("resetPassError2");
    const resetform = document.getElementById("resetform");

    resetform.addEventListener("submit", async function (e) {
      e.preventDefault();

      const newPassword = passwordID.value.trim();
      const confirmPassword = CpasswordID.value.trim();
      const alpha = /[a-zA-Z]/;
      const digit = /\d/;
      let isValid = true;

      // âœ… Frontend validation
      if (newPassword.length < 8) {
        resetPassError1.style.display = "block";
        resetPassError1.innerHTML = "Password should contain at least 8 characters";
        isValid = false;
      } else if (!alpha.test(newPassword) || !digit.test(newPassword)) {
        resetPassError1.style.display = "block";
        resetPassError1.innerHTML = "Password should contain both alphabets and digits";
        isValid = false;
      } else {
        resetPassError1.style.display = "none";
        resetPassError1.innerHTML = "";
      }

      if (newPassword !== confirmPassword) {
        resetPassError2.style.display = "block";
        resetPassError2.innerHTML = "Passwords do not match";
        isValid = false;
      } else {
        resetPassError2.style.display = "none";
        resetPassError2.innerHTML = "";
      }

      if (!isValid) return;


try {
  const response = await axios.post("/login/reset-password",
  { newPassword, confirmPassword },
  { headers: { "Content-Type": "application/json" } } 
);
console.log(response.data)
  if (response.data.success) {
    console.log('ifffff')
    Swal.fire("Success", "Password updated successfully!", "success").then(() => {
      window.location.href = "/login";
    });
  } else {
    // handle known error responses
    console.log('else...')
    Swal.fire("Error", response.data.message || "Something went wrong", "error");
  }
} catch (error) {
  const message = error.response?.data?.message || "Something went wrong";
  Swal.fire("Error", message, "error");
}


    });
  });
</script>


</body>

</html>