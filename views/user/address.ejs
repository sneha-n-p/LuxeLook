<%- include("../../views/partials/userPartial/header") %>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #fff;
    }

    .account-banner {
      background: url('/images/banner-address.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }

    .account-title {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
    }

    .account-wrapper {
      display: flex;
      margin-top: 40px;
    }

    .sidebar {
      width: 220px;
      background: #f3f3f3;
      padding: 30px 20px;
    }

    .sidebar h6 {
      font-weight: 600;
      margin-bottom: 20px;
      text-transform: uppercase;
      font-size: 14px;
    }

    .sidebar ul {
      padding-left: 0;
      list-style: none;
    }

    .sidebar ul li {
      padding: 8px 0;
      font-size: 14px;
      font-weight: 500;
    }

    .sidebar ul li.active a {
      font-weight: bold;
      color: #000;
    }

    .sidebar ul li a {
      text-decoration: none;
      color: #555;
    }

    .content-area {
      flex: 1;
      padding: 30px 40px;
    }

    .address-card {
      border: 1px solid #ccc;
      padding: 15px 20px;
      border-radius: 8px;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #fefefe;
    }

    .address-info {
      max-width: 80%;
    }

    .address-info strong {
      font-weight: 600;
      display: block;
      margin-bottom: 5px;
    }

    .delete-btn {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 6px 15px;
      border-radius: 20px;
      font-size: 14px;
      transition: 0.3s;
    }

    .delete-btn:hover {
      background-color: #b52b38;
    }

    .pagination-wrapper {
      display: flex;
      justify-content: flex-end;
      margin-top: 20px;
    }

    .pagination {
      display: flex;
      list-style: none;
      padding-left: 0;
    }

    .pagination li a {
      padding: 8px 12px;
      border: 1px solid #ccc;
      margin: 0 2px;
      text-decoration: none;
      color: #333;
      border-radius: 4px;
      font-size: 14px;
    }

    .pagination li.active a {
      background-color: #57c9d5;
      color: white;
      border: none;
    }

    .add-btn {
      background-color: #57c9d5;
      border: none;
      color: white;
      padding: 10px 25px;
      border-radius: 25px;
      font-size: 14px;
      transition: 0.3s;
      margin-top: 20px;
    }

    .add-btn:hover {
      background-color: #44b0bb;
    }

    .edit-btn {
      background-color: #44b0bb;
      color: white;
      border: none;
      padding: 6px 15px;
      border-radius: 20px;
      font-size: 14px;
      transition: 0.3s;
    }
    .edit-btn{
      text-decoration: none;
    }
  </style>

<section class="hero text-center bg-light p-0 mb-4">
      <img src="wallpaper\luxelook-wall6.jpg" alt="Shop Banner" class="img-fluid w-100"
          style="height: 400px; object-fit: cover;">
      <h1 class="position-absolute top-50 start-50 translate-middle text-white fw-bold display-4">ADDRESSES
      </h1>
</section>

  <div class="container-fluid account-wrapper">
    <div class="sidebar">
      <h6>SETTINGS</h6>
      <ul>
        <li><a href="/orders">Orders</a></li>
        <li><a href="/profile">Personal Info</a></li>
        <li class="active"><a href="/addresses">Addresses</a></li>
        <li><a href="/wallet">Wallet</a></li>
      </ul>
    </div>

    <div class="content-area">
      <h5 class="mb-4 fw-bold">MY ADDRESSES</h5>

      <% if (addresses && addresses.length> 0) { %>
        <% addresses.forEach(function(address) { %>
          <div class="address-card">
            <div class="address-info">
              <strong>
                <%= address.name %>
              </strong>
              <div>
                <%= address.streetAddress %>, <%= address.city %> - <%= address.pincode %>
              </div>
              <div>
                <%= address.state %>
              </div>
              <div>Phone: <%= address.phone %>
              </div>
              <% if (address.altPhone) { %>
                <div>Alt Phone: <%= address.altPhone %>
                </div>
                <% } %>
            </div>
            <form>
              <a href="/edit-address/<%=address._id%>" class="edit-btn">Edit</a>
              <button type="button" class="delete-btn" onclick="confirmRemove('<%=address._id%>')">Delete</button>
            </form>
          </div>
          <% }) %>

            <div class="pagination-wrapper">
              <ul class="pagination">
                <% for (let i=1; i <=totalPages; i++) { %>
                  <li class="<%= i === currentPage ? 'active' : '' %>">
                    <a href="/addresses?page=<%= i %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
              </ul>
            </div>

            <% } else { %>
              <p>No address added yet.</p>
              <% } %>

                <div>
                  <a href="/add-address" class="add-btn">+ Add Address</a>
                </div>

    </div>
  </div>
  <script>
    function confirmRemove(addressId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, remove it!"

      }).then((result) => {
        if (result.isConfirmed) {
          axios.post('/delete-address/', { addressId })
            .then(function (response) {
              if (response.data.success) {
                Swal.fire({
                  icon: "success",
                  title: "Removed!",
                  text: "Are you delete the address.",
                  showConfirmButton: false,
                  timer: 1200
                })
              }
            })
            .catch(error => {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Something went wrong while removing the Address!"
              });
              console.error("Remove Address Error:", error);
            });
        }
      });
    }



  </script>

  <%- include("../../views/partials/userPartial/footer") %>