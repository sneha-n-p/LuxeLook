                text: responce.data.message || '',
                showConfirmButton: false,
                timer: 1500
              });
            }).catch(() => {
              Swal.fire({
                title: "Error Occured",
                icon: "error",
                showConfirmButton: false,
                text: 'Already exist in wishlist',
                timer: 1500
              });
            });
        }

