         function searchProducts() {
    const query = document.getElementById("searchInput").value.trim();
    const sort = document.getElementById('sortSelect').value;
    const selectCategory = document.getElementById('selectCat').value.trim()  
    const priceFilter = document.getElementById('priceFilter').value;

    const url = new URL(window.location.origin + "/shop");
    url.searchParams.set("search", query);
    url.searchParams.set("sort", sort);
    url.searchParams.set("page", 1); 
    url.searchParams.set('selectCategory',selectCategory)
    url.searchParams.set("priceFilter", priceFilter);
    window.location.href = url.toString();
