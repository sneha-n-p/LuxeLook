<%- include('../partials/userPartial/header') %>

  <style>
    .account-banner {
      background: url('/images/account-banner.jpg') center/cover no-repeat;
      height: 250px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 48px;
      font-weight: 600;
      color: #111;
    }

    .account-container {
      padding: 50px 0;
    }

    .sidebar {
      background: #f1f1f1;
      padding: 20px;
      border-radius: 8px;
      height: 100%;
    }

    .sidebar a {
      display: block;
      margin-bottom: 10px;
      color: #000;
      font-weight: 500;
    }

    .sidebar a:hover {
      text-decoration: underline;
    }

    .orders-table {
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 8px;
      overflow: hidden;
    }

    .orders-table thead {
      background: #3ccfcf;
      color: #fff;
    }

    .orders-table th,
    .orders-table td {
      padding: 15px;
      text-align: center;
      vertical-align: middle;
    }

    .status-delivered {
      background: #28a745;
      color: #fff;
      padding: 5px 10px;
      border-radius: 20px;
    }

    .status-pending {
      background: #ffc107;
      color: #000;
      padding: 5px 10px;
      border-radius: 20px;
    }

    .action-btn {
      padding: 5px 15px;
      border: none;
      border-radius: 20px;
      font-weight: 500;
      cursor: pointer;
    }

    .btn-return {
      background-color: #dc3545;
      color: #fff;
    }

    .btn-cancel {
     background-color: #661820;
      color: #fff;
    }
  </style>

  <div class="account-banner">ACCOUNT</div>

  <div class="container-fluid account-container">
    <div class="row">
      <div class="col-md-3">
        <div class="sidebar">
          <a href="/orders" style="text-decoration: none;">Orders</a>
          <a href="/profile" style="text-decoration: none;">Personal Info</a>
          <a href="/addresses" style="text-decoration: none;">Addresses</a>
          <a href="/wallet" style="text-decoration: none;">Wallet</a>
        </div>
      </div>
      <div class="col-md-9">
        <h4 class="mb-4 fw-bold">MY ORDERS</h4>
        <table class="table orders-table">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Price</th>
              <th>Delivery Date</th>
              <th>Status</th>
              <th>Action</th>
              <th>Image</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order=> { %>
              <tr>
                <td>
                  <% order.orderedItems.forEach(item=> { %>
                    <div>
                      <%= item.product.productName %>
                    </div>
                    <% }) %>
                </td>
                <td>
                  ₹<%= order.orderedItems.map(i=> i.price * i.quantity).reduce((a, b) => a + b, 0) %>
                </td>
                <td>
                  <%= order.deliveryDate ? order.deliveryDate.toDateString() : "Not Assigned" %>
                </td>
                <td>
                  <% if (order.status.trim()==='Delivered' ) { %>
                    <span class="status-delivered">DELIVERED</span>
                    <% } else if (order.status.trim()==='Pending' ) { %>
                      <span class="status-pending">PENDING</span>
                      <% } else { %>
                        <span class="badge bg-secondary">
                          <%= order.status.toUpperCase() %>
                        </span>
                        <% } %>
                </td>
                <td>
                  <% if (order.status.trim()==='Delivered' ) { %>
                    <% order.orderedItems.forEach(item=> { %>
                      <button class="action-btn btn-return"
                        onclick="returnOrder('<%= order._id %>', '<%= item.product._id %>', '<%= item.product.productName %>')">
                        RETURN
                      </button>

                      <% }) %>
                        <% } else if (['Pending', 'Shipped' , 'Out For Delivery' ].includes(order.status.trim())) { %>
                          <button onclick="fullCancellation('<%= order._id %>')"
                            class="action-btn btn-cancel">CANCEL</button>
                          <% }else { %>
                            <span></span>
                            <% } %>

                              <!-- View details button -->
                              <a href="/order/details/<%= order._id %>" class="action-btn btn-primary"
                                style="background:#007bff; color:white;">VIEW</a>
                </td>

                <td style="display: flex; gap: 5px; justify-content: center;">
                  <% order.orderedItems.slice(0, 2).forEach(item=> { %>
                    <img src="<%= item.product.productImage[0] %>" alt="Product Image"
                      style="width:50px; height:65px; object-fit:cover;">
                    <% }) %>
                </td>

              </tr>
              <% }) %>
          </tbody>

        </table>
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-4">
      <p class="m-0">Showing 1 to <%= totalPages %>
      </p>
      <div class="d-flex gap-2">
        <ul class="pagination mb-0">
          <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">‹</a>
          </li>

          <% for (let i=1; i <=totalPages; i++) { %>
            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
              <a class="page-link" style="text-decoration: none;background-color:#30cfcf;"
                href="?page=<%= i %>&search=<%= search %>">
                <%= i %>
              </a>
            </li>
            <% } %>

              <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">›</a>
              </li>
        </ul>
      </div>
    </div>
  </div>


  <script>

    function fullCancellation(orderId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You wont cancel the order!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Cancel it!"
      }).then((result) => {
        if (result.isConfirmed) {
          axios.post('/orders/cancel', { orderId })
            .then(response => {
              if (response.data.success) {
                Swal.fire({
                  icon: "success",
                  title: "Cancelled!",
                  text: "Order Cancel Successfully.",
                  showConfirmButton: false,
                  timer: 1200
                })
              } else {
                Swal.fire({
                  icon: "success",
                  title: "Cancelled!",
                  text: responce.data.message,
                  showConfirmButton: false,
                  timer: 1200
                })
              }
            })
        }
      })
        .catch((error) => {
          Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Something went wrong while cancel the order!"
          })
        })

    }


    function returnOrder(orderId, productId, productName) {
      Swal.fire({
        title: 'Return: ' + productName,
        input: 'textarea',
        inputLabel: 'Reason for return',
        inputPlaceholder: 'Enter your reason here...',
        inputAttributes: {
          'aria-label': 'Reason for return'
        },
        showCancelButton: true,
        confirmButtonText: 'Submit',
        preConfirm: (reason) => {
          if (!reason.trim()) {
            Swal.showValidationMessage('Reason is required');
          } else {
            return reason;
          }
        }
      }).then((result) => {
        if (result.isConfirmed) {
          axios.patch('/orders/return', {
            orderId,
            productId,
            reason: result.value
          }).then(response => {
            if (response.data.success) {
              Swal.fire({
                icon: "success",
                title: "Return Requested!",
                text: "Your return request has been submitted.",
                showConfirmButton: false,
                timer: 1500
              }).then(() => {
                location.reload();
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Oops!",
                text: response.data.message || "Return request failed.",
              });
            }
          }).catch(error => {
            Swal.fire({
              icon: "error",
              title: "Oops!",
              text: "Something went wrong while submitting return request.",
            });
          });
        }
      });
    }
  </script>

  <%- include('../partials/userPartial/footer') %>