<%-include("../../views/partials/userPartial/header")%>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fff;
    }

    .checkout-banner {
      background: url('/images/banner-checkout.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }

    .checkout-title {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
    }

    .address-box {
      background: #f7f7f7;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 15px;
      cursor: pointer;
      transition: 0.3s;
    }

    .address-box.active {
      border: 2px solid #57c9d5;
      background-color: #e6f8fa;
    }

    .add-address-btn {
      background: #57c9d5;
      border: none;
      padding: 10px 20px;
      color: white;
      border-radius: 25px;
      font-size: 14px;
    }

    .add-address-btn:hover {
      background: #44b0bb;
    }

    .cart-summary {
      background: #fff;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 8px;
    }

    .cart-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }

    .cart-item img {
      width: 60px;
      height: 80px;
      object-fit: cover;
      margin-right: 10px;
    }

    .continue-btn {
      background: #57c9d5;
      border: none;
      padding: 10px 50px;
      color: white;
      border-radius: 25px;
      font-size: 16px;
    }

    .continue-btn:hover {
      background: #44b0bb;
    }

    footer {
      background: #111;
      color: #fff;
      padding: 40px 0;
      font-size: 14px;
    }

    .footer-title {
      font-weight: 600;
      margin-bottom: 15px;
    }

    .footer-link {
      color: #aaa;
      text-decoration: none;
    }

    .footer-link:hover {
      text-decoration: underline;
    }
  </style>
  </head>

  <body>

    <section class="hero text-center bg-light p-0 mb-4">
      <!-- <div class="banner position-relative"> -->
          <img src="wallpaper\luxelook-wall8.jpg" alt="Shop Banner" class="img-fluid w-100"
              style="height: 400px; object-fit: cover;">
          <h1 class="position-absolute top-50 start-50 translate-middle text-white fw-bold display-4">CHECKOUT
          </h1>
      <!-- </div> -->
  </section>

    <div class="container py-5">
      <div class="row">
        <div class="col-md-7">
          <h5 class="fw-bold mb-3">SELECT ADDRESS</h5>

          <form action="/placeOrder" method="POST">
            <%if(addresses){%>
              <div class="mb-3">
                <select class="form-select" name="addressId" required>
                  <% addresses.forEach((address, index)=> { %>
                    <option value="<%= address._id %>" <%=index===0 ? 'selected' : '' %>>
                      <%= address.name %> - <%= address.streetAddress %>, <%= address.city %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <%}%>
                <a href="/cart-add-address" class="btn add-address-btn my-3">Add Address</a>

                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="coupon" placeholder="Coupon Code">
                  <button class="btn btn-dark" type="button">Available Coupon</button>
                </div>

                <!-- Payment Method Section -->
                <h5 class="fw-bold mb-3 mt-4">SELECT PAYMENT METHOD</h5>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD" checked>
                  <label class="form-check-label" for="cod">
                    Cash on Delivery
                  </label>
                </div>
                <input type="number" name="Total" value="<%= finalTotal %>" hidden>

                <button type="submit" class="btn continue-btn w-100 mt-3">Place Order</button>
          </form>
        </div>

        <div class="col-md-5">
          <div class="cart-summary">
            <h5 class="fw-bold mb-4">CONFIRM DETAILS</h5>

            <% cartItems.forEach(item=> { %>
              <div class="cart-item">
                <img src="<%= item.product.imageUrl %>" alt="Product">
                <div>
                  <div>
                    <%= item.product.name %>
                  </div>
                  <div>Qty: <%= item.quantity %>
                  </div>
                  <div>₹<%= item.totalPrice %>
                  </div>
                </div>
              </div>
              <% }) %>

                <hr>

                <h6 class="fw-bold mb-2">CART TOTAL</h6>
                <div class="d-flex justify-content-between">
                  <span>Subtotal</span>
                  <span>₹<%= subtotal %></span>
                </div>
                <div class="d-flex justify-content-between">
                  <span>Delivery</span>
                  <span>₹<%= delivery %></span>
                </div>
                <div class="d-flex justify-content-between">
                  <span>Discount</span>
                  <span>₹<%= discount %></span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold">
                  <span>Total</span>
                  <span>₹<%= finalTotal %></span>
                </div>
          </div>
        </div>
      </div>
    </div>
    <%-include("../../views/partials/userPartial/footer")%>