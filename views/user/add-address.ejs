    <div class="banner">
      <img src="/wallpaper/wall4.jpg" alt="Shop Banner" class="img-fluid w-100">
      <h1>ADD ADDRESS</h1>
    </div>
  </section>

  <!-- Wrapper -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 sidebar">
        <h5>SETTINGS</h5>
        <a href="/orders" class="<%= currentPath === '/orders' ? 'fw-bold' : '' %>">
          <i class="fas fa-shopping-cart"></i> Orders
