  <script>
    const addAddressForm = document.getElementById('addAddressForm');
    const phoneInput = document.getElementById('phone')
    const altPhoneInput = document.getElementById('altPhone')

    phoneInput.value = "+91 ";

    phoneInput.addEventListener("input", function () {
      if (!this.value.startsWith("+91 ")) {
        this.value = "+91 " + this.value.replace(/[^0-9]/g, "");
      } else {
        let digits = this.value.slice(4).replace(/[^0-9]/g, "");
        if (digits.length > 10) digits = digits.slice(0, 10);
        this.value = "+91 " + digits;
      }
    })

    altPhoneInput.value = "+91 ";
    altPhoneInput.addEventListener("input", function () {
      if (!this.value.startsWith("+91 ")) {
        this.value = "+91 " + this.value.replace(/[^0-9]/g, "");
      } else {
        let digits = this.value.slice(4).replace(/[^0-9]/g, "");
        if (digits.length > 10) digits = digits.slice(0, 10);
        this.value = "+91 " + digits;
      }
    })

    const pincodeInput = document.getElementById('pincode');
    pincodeInput.addEventListener('input', function () {
      let digits = this.value.replace(/[^0-9]/g, "");
      if (digits.length > 6) digits = digits.slice(0, 6);
      this.value = digits;
    });

    const showError = (elementId, message) => {
      const errorElement = document.getElementById(elementId);
      errorElement.innerHTML = message;
      errorElement.style.display = 'block';
    };

    const hideError = (elementId) => {
      const errorElement = document.getElementById(elementId);
      errorElement.innerHTML = '';
      errorElement.style.display = 'none';
    };

    addAddressForm.addEventListener('submit', function (e) {
      e.preventDefault();

      let isValid = true;

      const name = document.getElementById('name').value.trim();
      let phone = document.getElementById('phone').value.trim();
      const altPhone = document.getElementById('altPhone').value.trim().replace('+91 ', '');
      const streetAddress = document.getElementById('streetAddress').value.trim();
      const apartment = document.getElementById('apartment').value.trim();
      const city = document.getElementById('city').value.trim();
      const state = document.getElementById('state').value.trim();
      const pincode = document.getElementById('pincode').value.trim();
      const isDefault = document.querySelector('input[name="isDefault"]:checked')?.value || null;
      const addressType = document.getElementById('addressType').value;
      const pincodeInput = document.getElementById('pincode')

      // NAME VALIDATION
      if (!/^[A-Za-z\s]{3,}$/.test(name)) {
        showError('Error1', 'Name must be at least 3 characters and contain only alphabets.');
        isValid = false;
      } else {
        hideError('Error1');
      }

      // STREET ADDRESS
      if (streetAddress.length < 5) {
        showError('Error2', 'Street address must be at least 5 characters.');
        isValid = false;
      } else {
        hideError('Error2');
      }

      // CITY
      if (!/^[A-Za-z\s]{3,}$/.test(city)) {
        showError('Error4', 'City name must contain only letters and be at least 3 characters.');
        isValid = false;
      } else {
        hideError('Error4');
      }

      // PINCODE
      if (!/^\d{6}$/.test(pincode) || /^(\d)\1{5}$/.test(pincode)) {
        showError('Error5', 'Pincode must be 6 digits and not all same digits.');
        isValid = false;
      } else {
        hideError('Error5');
      }

      // PHONE
      phone = phone.replace(/\s+/g, '');
      phone = phone.replace(/^\+?91/, '');
      if (!/^\d{10}$/.test(phone) || /^(\d)\1{9}$/.test(phone) || phone.startsWith('0')) {
        showError('Error6', 'Phone must be 10 digits, not all same, and not start with 0.');
        isValid = false;
      } else {
        hideError('Error6');
      }

      // ALT PHONE
      if (altPhone && (!/^\d{10}$/.test(altPhone) || /^(\d)\1{9}$/.test(altPhone) || altPhone === phone)) {
        showError('Error7', 'Alternate phone must be valid, different from primary.');
        isValid = false;
      } else {
        hideError('Error7');
      }

      // ADDRESS TYPE
      if (!addressType) {
        showError('Error8', 'Please select an address type.');
        isValid = false;
      } else {
        hideError('Error8');
      }

      // STATE
      if (!state) {
        showError('Error9', 'Please select a state.');
        isValid = false;
      } else {
        hideError('Error9');
      }

      if (isValid) {
        (async function submitForm() {
          const res = await axios.post('/addresses/add-address', {
            addressType, name, state, streetAddress, apartment, city, pincode, phone, altPhone, isDefault
          });
          if (res.data.success) {
            Swal.fire({
              icon: 'success',
              title: 'Address Verified',
              text: res.data.verifiedAddress,
              scrollbarPadding: false
            }).then(() => document.location.href = res.data.redirectUrl);
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Address Mismatch',
              text: res.data.message,
              scrollbarPadding: false
            });
          }
        })();
      }
    });
    function toggleDropdown() {
      const drop = document.getElementById("mobileDropdown");
      drop.style.display = drop.style.display === "flex" ? "none" : "flex";
    }

  </script>

