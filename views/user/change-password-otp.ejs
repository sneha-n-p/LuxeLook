<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>OTP Verification | LuxeLook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fff;
    }
    .otp-banner {
      background: url('/images/profile-banner.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }
    .otp-header {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
    }
    .otp-box {
      max-width: 500px;
      margin: 60px auto;
      padding: 30px;
      box-shadow: 0 0 15px rgba(0,0,0,0.08);
      border-radius: 10px;
      background: #fff;
    }
    .otp-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 20px;
      text-align: center;
    }
    .otp-input {
      text-align: center;
      font-size: 20px;
      letter-spacing: 10px;
      padding: 10px;
      height: 50px;
      border-radius: 10px;
    }
    .submit-btn {
 background: linear-gradient(90deg, #B5654B  , #D17C63 );
      color: white;
      padding: 10px 30px;
      border: none;
      border-radius: 25px;
      display: block;
      margin: 20px auto 10px;
      transition: 0.3s;
    }
    .submit-btn:hover {
 background: linear-gradient(90deg, #B5654B  , #D17C63 );
    }
    .resend-text {
      text-align: center;
      margin-top: 10px;
      font-size: 14px;
    }
    .resend-text a {
      color: #57c9d5;
      font-weight: 500;
      text-decoration: none;
    }
  </style>
</head>
<body>

  <!-- Banner/Header -->
  <div class="otp-banner">
    <div class="otp-header">VERIFY OTP</div>
  </div>

  <!-- OTP Box -->
  <div class="otp-box" style="background-color: #F2E8DC;">
    <div class="otp-title">Enter the OTP sent to your email</div>
    <form  id="otpForm"  onsubmit="return validateOTPform()">
      <input type="text" name="otp" maxlength="6" class="form-control otp-input mb-3" id="otpInput" placeholder="------" required>
     
      <button type="submit" class="submit-btn" id="btn-submit">Verify OTP</button>
    </form>

    <div id="timer" style="text-align: center;">OTP valid for: <span id="countdown">60</span> seconds</div>
    <div class="expired-msg" id="expiredMsg" style="display: none; color:red">OTP expired</div>

    <div class="resend-text">
      Didn't get the code? <button  id="resend-btn" onclick="resendOTP() " >Resend OTP</button>
    </div>
  </div>

  <script>
    let countdown = 60;
    const countdownEl = document.getElementById('countdown');
    const otpInput = document.getElementById('otpInput');
    const submitBtn = document.querySelector('.btn-submit');
    const expiredMsg = document.getElementById('expiredMsg');
    const otpForm = document.getElementById('otpForm');



      
    let timer = setInterval(() => {
      countdown--;
      countdownEl.innerText = countdown;

      if (countdown <= 0) {
        clearInterval(timer);
        otpInput.disabled = true;
        submitBtn.disabled = true;
        expiredMsg.style.display = 'block';
      }
    }, 1000);

    function validateOTPform() {
      const otpInput = document.getElementById("otpInput").value.trim()

      if (otpInput == "") {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: "Please enter an OTP!",
        });
      } else {
        axios.post('/changePassword-otp', { otp: otpInput })
          .then(function (response) {
            if (response.data.success) {
              Swal.fire({
                icon: "success",
                title: "OTP verified successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                window.location.href = response.data.redirectUrl;
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Invalid OTP",
                text: response.data.message,
              });
            }
          })
          .catch(function (error) {
            Swal.fire({
              icon: "error",
              title: "Internal Server Error",
              text: "Please try again"
            });
          });
      }

      return false
    }


    function resendOTP() {
      console.log('clicked')
      document.getElementById("resend-btn").disabled = true
      countdown = 30;
      otpInput.disabled = false
      // submitBtn.disabled = false;
      expiredMsg.style.display = "none"
      countdownEl.innerText = countdown;
      if(timer)clearInterval(timer);

      timer = setInterval(() => {
        countdown--;
        console.log(countdown)
        countdownEl.innerText = countdown;

        if (countdown <= 0) {
          clearInterval(timer); 
          otpInput.disabled = true;
          submitBtn.disabled = true;
          expiredMsg.style.display = 'block';
        }
      }, 1000);
      // clearInterval(timer)
      console.log("axios Send")
      axios.post("/send-otp")
        .then(function (response) {
          
          console.log("resend otp response:", response);
          if (response.data.success) {
            Swal.fire({
              icon: "success",
              title: "OTP resent successfully",
              showConfirmButton: false,
              timer: 1500,
            });
          } else {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: response.data.message || "An error occurred while resending OTP.",
            });
          }
          document.getElementById("resend-btn").disabled = false
        })
        .catch(function (error) {
          Swal.fire({
            icon: "error",
            title: "Server Error",
            text: error.response?.data?.message || "Please try again.",
          });
        });
      return false
    }
    

</script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</body>
</html>
