              <div class="cart-item">
                <img src="<%= item.product.productImage[0] %>" alt="Product">
                <div>
                  <div class="fw-bold">Product Name: <%= item.product.name %>
                  </div>
                  <div class="text-muted">Size: <%= item.size %>
                  </div>
                  <div class="text-muted">Qty: <%= item.quantity %>
