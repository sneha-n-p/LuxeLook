<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #f8f6f1;
    color: #333;
  }

  /* =======================
     BANNER
  ======================= */
  .banner-image1 {
    width: 100%;
    height: 720px;
    object-fit: cover;
    margin-top: -47px;
    border-radius: 0;
    filter: brightness(0.75);
  }

  .banner-overlay-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    color: #fff;
    text-align: center;
    width: 100%;
    padding: 20px;
  }

  .banner-overlay-text h1 {
    font-size: 3.5rem;
    font-weight: 800;
    letter-spacing: 1px;
    text-shadow: 4px 4px 15px rgba(0, 0, 0, 0.7);
  }

  .banner-overlay-text p {
    font-size: 1.4rem;
    font-weight: 500;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
  }

  .discover {
    background: linear-gradient(90deg, #000, #434343);
    color: #f4c10f;
    border-radius: 30px;
    padding: 12px 36px;
    font-weight: 600;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .discover:hover {
    background: #fff;
    color: #000;
    border: 2px solid #000;
  }

  /* =======================
     BESTSELLERS
  ======================= */
  .bestsellers .card {
    display: flex;
    flex-direction: column;
  }

  .bestsellers .card-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    text-align: center;
    padding: 1rem;
  }

  .bestsellers .card-body .btn {
    margin-top: auto;
    border-radius: 50px;
    background: linear-gradient(90deg, #B5654B, #D17C63);
    color: white;
    border: none;
  }

  .wishlist-symbol {
    font-size: 24px;
    color: #d40000;
    background: none;
    border: none;
  }

  /* =======================
     FEATURES SECTION
  ======================= */
  .feature-card {
    background-color: hsl(32, 50%, 87%);
    border-radius: 25px;
    padding: 20px;
    height: 100%;
    text-align: center;
  }

  /* =======================
     MOBILE FIXES
  ======================= */
  @media (max-width: 576px) {

    /* Banner */
    .banner-image1 {
      height: 260px !important;
      border-radius: 6px;
    }

    .banner-overlay-text h1 {
      font-size: 1.8rem !important;
    }

    .banner-overlay-text p {
      font-size: 1rem !important;
    }

    .discover {
      padding: 8px 24px !important;
    }

    /* Two products per row */
    .bestsellers .col-md-3 {
      width: 50% !important;
      flex: 0 0 50% !important;
      max-width: 50% !important;
    }

    /* Product image */
    .bestsellers .card img {
      height: 170px !important;
      object-fit: cover;
    }

    /* Product name smaller */
    .bestsellers .card-title {
      font-size: 13px !important;
      font-weight: 600;
    }

    /* Stack feature cards one below one */
    .home-wrapper .col-md-3,
    .home-wrapper .col-sm-3 {
      width: 100% !important;
      flex: 0 0 100% !important;
      max-width: 100% !important;
      font-size: small;
    }

    .feature-card {
      padding: 16px !important;
    }
    
  }
</style>

