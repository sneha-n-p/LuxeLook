  <section class="bestsellers py-5">
    <div class="container">
      <h2 class="text-center mb-4">Our Bestsellers</h2>
      <div class="row">
        <% for (let i=0; i < 4; i++) { %>
          <% if (products[i]) { %>
            <div class="col-md-3 mb-4 d-flex">
              <div class="card w-100">
                <img src="<%= products[i].productImage[0] %>" class="card-img-top" alt="<%= products[i].productName %>">
                <div class="card-body text-center d-flex flex-column">
                  <div>
                    <h5 class="card-title">
                      <%= products[i].productName %>
                    </h5>
                    <p>
                      <%= products[i].description %>
                    </p>

                    <% if (products[i].bestOffer> 0) { %>
                      <p class="card-text mb-1">
                        <s class="text-muted">â‚¹<%= products[i].regularPrice %></s>
                        <span class="text-danger ms-2">-<%= products[i].bestOffer %>%</span>
                      </p>
                      <p class="card-text fw-bold">â‚¹<%= products[i].variant[0].salePrice %>
                      </p>
                      <% } else { %>
                        <p class="card-text fw-bold">â‚¹<%= products[i].variant[0].salePrice %>
                        </p>
                        <% } %>
                  </div>

                  <div class="mt-auto">
                    <a href="/shop/product-details/<%= products[i]._id %>">
                      <button class="btn btn-outline-dark btn-sm w-100">View Details</button>
                    </a>

                    <% if (products[i].quatity > 0) { %>
                  <div class="mt-2 d-flex justify-content-center align-items-center" style="height: 40px;">
                    <button class="wishlist-symbol" onclick="addToWishlist('<%= products[i]._id %>')">&#10084;</button>
                  </div>
                <% } else { %>
                  <div class="text-danger class=mt-2 d-flex justify-content-center align-items-center" style="height: 40px;"><strong>Out of Stock</strong></div>
                <% } %>
                  </div>
                </div>

              </div>
            </div>
            <% } %>
              <% } %>
      </div>
    </div>
  </section>


  <script>

    function addToWishlist(productId, TotalWhishListCount) {
      axios.post("/wishlist/addToWishlist", { productId, TotalWhishListCount })
        .then(function (responce) {
          if (responce.data.success) {
            Swal.fire({
              title: `Add To Wishlist`,
              icon: 'success',
              showConfirmButton: false,
              text: `${responce.data.TotalWhishlistCount} Products are in your whishalist`,
              timer: 1500
            }).then(() => location.reload())
          } else {
            Swal.fire({
              title: "Error Occured",
              icon: "error",
              showConfirmButton: false,
              text: responce.data.message,
              timer: 1500
            })
          }
        }).catch((error) => {
          Swal.fire({
            title: "Warning",
            icon: "warning",
            showConfirmButton: false,
            text: "Already Exist in wishlist",
            timer: 1500
          })
        })
    }
