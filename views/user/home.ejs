  <section class="bestsellers py-5">
  <div class="container">
    <h2 class="text-center mb-4">Our Bestsellers</h2>
    <div class="row">
      <% for (let i = 0; i < 4; i++) { %>
        <% if (products[i]) { %>
          <div class="col-md-3 mb-4 d-flex">
            <div class="card w-100">
              <img src="<%= products[i].productImage[0] %>" class="card-img-top" alt="<%= products[i].productName %>">
              <div class="card-body text-center">
               <div> <h5 class="card-title"><%= products[i].productName %></h5><p><%=products[i].description%></p></div>
               <div>
               <% if (products[i].bestOffer > 0) { %>
                  <p class="card-text mb-1">
                    <s class="text-muted">â‚¹<%= products[i].regularPrice %></s>
                    <span class="text-danger ms-2">-<%= products[i].bestOffer %>%</span>
                  </p>
                  <p class="card-text"><strong>â‚¹<%= products[i].variant[0].salePrice  %></strong></p>
                <% } else { %>
                  <p class="card-text"><strong>â‚¹<%= products[i].variant[0].salePrice %></strong></p>
                  <% } %>
                </div>

                <div>
                  <a href="/product-details/<%= products[i]._id %>">
                    <button class="btn btn-outline-dark btn-sm" style="background: linear-gradient(90deg, #B5654B, #D17C63); color: #fff;">View Details</button>
                  </a>
                </div>

                <% if (products[i].quatity > 0) { %>
                  <div class="mt-2">
                    <button class="wishlist-symbol" onclick="addToWishlist('<%= products[i]._id %>')">&#10084;</button>
                  </div>
                <% } else { %>
                  <div class="text-danger mt-2"><strong>Out of Stock</strong></div>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</section>


  <script>

    function addToWishlist(productId) {

      axios.post("/addToWishlist", { productId })
        .then(function (responce) {
          if (responce.data.success) {
            Swal.fire({
              title: `Add To Wishlist`,
              icon: 'success',
              showConfirmButton: false,
              timer: 1500
            }).then(()=>location.reload())
          } else {
            Swal.fire({
              title: "Error Occured",
              icon: "error",
              showConfirmButton: false,
              text: responce.data.message,
              timer: 1500
            })
          }
        }).catch((error) => {
          Swal.fire({
            title: "Error Occured",
            icon: "error",
            showConfirmButton: false,
            text: "Already Exist in wishlist",
            timer: 1500
          })
        })
    }
