    /* === Uniform card layout for Bestsellers section === */
.bestsellers .card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bestsellers .card-body {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  padding: 1rem;
  flex-grow: 1;
}

/* Keep the button area fixed at the bottom */
.bestsellers .card-body .btn {
  margin-top: auto;
  border: none;
  border-radius: 50px;
  background: linear-gradient(90deg, #B5654B, #D17C63);
  color: #fff;
  padding: 6px 18px;
  font-size: 0.9rem;
  transition: background 0.3s ease, transform 0.2s ease;
}

.bestsellers .card-body .btn:hover {
  background: #333;
  color: #fff;
  transform: scale(1.05);
}

/* Ensure wishlist and out-of-stock stay neatly below button */
.bestsellers .wishlist-symbol {
  margin-top: 10px;
}

.bestsellers .text-danger {
  margin-top: 10px;
}

    .wishlist-symbol {
      background: none;
      border: none;
      color: #d40000;
      font-size: 24px;
      cursor: pointer;
      margin: 0 5px;
      transition: transform 0.25s ease;
    }

    .wishlist-symbol:hover {
      transform: scale(1.4);
      /* Zoom symbols slightly more */
      color: #a80000;
    }

    .text-danger {
      font-size: 14px;
      font-weight: bold;
      color: #cc0000 !important;
    }

    h2.section-title {
      font-weight: 700;
      margin-bottom: 30px;
      position: relative;
      color: #1a1a1a;
    }

    h2.section-title::after {
      content: "";
      position: absolute;
      width: 70px;
      height: 3px;
      background: #d4af37;
      left: 50%;
      transform: translateX(-50%);
      bottom: -12px;
    }

    .features p,
    .card-body p {
      color: #555;
    }

    .bestsellers h2 {
      font-size: 2.2rem;
      font-weight: 700;
      color: #1e1e1e;
      margin-bottom: 40px;
    }

    .feature-card {
      background-color: hsl(32, 50%, 87%);
      border-radius: 25px;
      padding: 20px;
      height: 100%;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      font-size: 0.95rem;
    }

    .feature-card h3 {
      font-size: 1.2rem;
      font-weight: 600;
    }

    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }
  </style>

