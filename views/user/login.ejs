<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login - LuxeLook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;

        }

        .split {
            display: flex;
            height: 100vh;
        }

        .left-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fbf7f2;
            padding: 40px;
        }

        .right-side {
            flex: 1;
            background: url('/images/login-image.png') no-repeat center center;
            background-size: cover;
            position: relative;
            z-index: 10;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
        }

        .login-form h2 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .login-form p {
            color: #6c757d;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login {
            background-color: #04384c;
            color: white;
            font-weight: 600;
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login:hover {
            background-color: #032c3b;
        }

        .forgot-link {
            float: right;
            font-size: 0.9rem;
            color: #26c6da;
            text-decoration: none;
        }

        .forgot-link:hover {
            text-decoration: underline;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #ccc;
        }

        .divider:not(:empty)::before {
            margin-right: .5em;
        }

        .divider:not(:empty)::after {
            margin-left: .5em;
        }

        .google-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            cursor: pointer;
        }

        .google-btn img {
            width: 20px;
            margin-right: 10px;
        }

        .signup-text {
            margin-top: 15px;
            font-size: 0.9rem;
        }

        .signup-text a {
            color: #26c6da;
            text-decoration: none;
        }

        .signup-text a:hover {
            text-decoration: underline;
        }

        .logo {
            position: absolute;
            top: 30px;
            right: 30px;
        }

        .logo img {
            width: 120px;
        }

        .left-section {
            flex: 1;
            background-color: #fce9e4;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            /* Make it a positioning context */
            overflow: hidden;
        }

        .left-section>img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .img-logo {
            position: absolute;
            top: -11px;
            right: 502px;
            width: 161px;
            /* Adjust based on your logo size */
            height: auto;
            z-index: 5;
        }

        .Error-message {
            color: red;
            font-size: 0.9rem;
            margin-top: 4px;
            display: none;
        }
    </style>
</head>

<body>

    <div class="split">
        <div class="left-side">
            <div class="login-form">
                <h2>Welcome back!</h2>
                <p>Enter your Credentials to access your account</p>

                <form id="loginForm" action="/login" method="POST">
                    <div class="mb-3">
                        <label>Email address</label>
                        <div id="LoginError1" class="Error-message"></div>
                        <input id="email" type="email" name="email" class="form-control" placeholder="Enter your email">
                    </div>

                    <div class="mb-3">
                        <label>Password</label> <a href="/login/forgot-password" class="forgot-link">forgot password</a>
                        <div id="LoginError2" class="Error-message"></div>
                        <input id="password" type="password" name="password" class="form-control"
                            placeholder="Password">
                    </div>
                    <% if (message) { %>
                        <div style="color:red;"></div>
                        <% } %>
                            <button onclick="Login(event)" class="btn btn-login w-100">Login</button>
                </form>

                <div class="divider">or</div>

                <a href="/auth/google" class="google-btn">
                    <img src="https://img.icons8.com/color/16/000000/google-logo.png" />
                    Sign in with Google
                </a>

                <div class="signup-text text-center">
                    Don’t have an account? <a href="/signup">Sign Up</a>
                </div>
            </div>
        </div>
        <div class="left-section">
            <div class="top-nav-top">
                <img class="img-logo" src="images\logo_forWhite.png" alt="luxelook-logo">
            </div class="top-nav-bottom">
            <img src="\wallpaper\signup_image.jpeg" alt="LuxeLook Logo">
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const loginForm = document.getElementById('loginForm');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const error1 = document.getElementById('LoginError1');
        const error2 = document.getElementById('LoginError2');

        // ✅ Email validation
        function validateEmailField() {
            const emailValue = emailInput.value.trim();
            const emailPattern = /^[^\s@]+@gmail\.com$/;

            if (!emailValue) {
                error1.textContent = "Email is required";
                error1.style.display = "block";
                return false;
            } else if (!emailPattern.test(emailValue)) {
                error1.textContent = "Invalid email format (only Gmail allowed)";
                error1.style.display = "block";
                return false;
            } else {
                error1.style.display = "none";
                return true;
            }
        }

        // ✅ Password validation
        function validatePasswordField() {
            const passwordValue = passwordInput.value.trim();
            if (!passwordValue) {
                error2.textContent = "Password is required";
                error2.style.display = "block";
                return false;
            } else {
                error2.style.display = "none";
                return true;
            }
        }

        // ✅ Realtime validation
        emailInput.addEventListener("input", validateEmailField);
        passwordInput.addEventListener("input", validatePasswordField);

        document.addEventListener("DOMContentLoaded", () => {
    <% if (message) { %>
                Swal.fire({
                    icon: 'error',
                    text: "<%= message %>",
                    confirmButtonColor: '#04384c'
                });
                // Remove ?error=... from URL so it doesn’t persist
                const url = new URL(window.location);
                url.searchParams.delete('error');
                window.history.replaceState({}, document.title, url.pathname);
    <% } %>
  });

        // ✅ Final Login Function
        async function Login(e) {
            e.preventDefault(); // stop default form submission
            const isEmailValid = validateEmailField();
            const isPasswordValid = validatePasswordField();

            if (!isEmailValid || !isPasswordValid) {
                return;
            }

            try {
                axios.post('/login', {
                    email: emailInput.value.trim(),
                    password: passwordInput.value.trim()
                }).then((response) => {
                    console.log('res', response.response)
                    if (response.data.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Login successful!",
                            showConfirmButton: false,
                            timer: 1500
                        });
                        setTimeout(() => {
                            window.location.href = "/";
                        }, 1500);
                    } else {
                        Swal.fire({
                            icon: 'error',
                            text: response.data.message,
                            timer: 1500
                        })
                    }
                }).catch((err) => {
                    console.log(err)
                    Swal.fire({
                        icon: 'error',
                        text: err.response.data.message,
                        timer: 1500
                    })
                })
            } catch (err) {
                if (err.response && err.response.data && err.response.data.message) {
                    error2.textContent = err.response.data.message;
                    error2.style.display = "block";
