<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login - LuxeLook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            
        }

        .split {
            display: flex;
            height: 100vh;
        }

        .left-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fbf7f2;
            padding: 40px;
        }

        .right-side {
            flex: 1;
            background: url('/images/login-image.png') no-repeat center center;
            background-size: cover;
            position: relative;
            z-index: 10;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
        }

        .login-form h2 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .login-form p {
            color: #6c757d;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login {
            background-color: #04384c;
            color: white;
            font-weight: 600;
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login:hover {
            background-color: #032c3b;
        }

        .forgot-link {
            float: right;
            font-size: 0.9rem;
            color: #26c6da;
            text-decoration: none;
        }

        .forgot-link:hover {
            text-decoration: underline;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #ccc;
        }

        .divider:not(:empty)::before {
            margin-right: .5em;
        }

        .divider:not(:empty)::after {
            margin-left: .5em;
        }

        .google-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            cursor: pointer;
        }

        .google-btn img {
            width: 20px;
            margin-right: 10px;
        }

        .signup-text {
            margin-top: 15px;
            font-size: 0.9rem;
        }

        .signup-text a {
            color: #26c6da;
            text-decoration: none;
        }

        .signup-text a:hover {
            text-decoration: underline;
        }

        .logo {
            position: absolute;
            top: 30px;
            right: 30px;
        }

        .logo img {
            width: 120px;
        }
           .left-section {
  flex: 1;
  background-color: #fce9e4;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative; /* Make it a positioning context */
  overflow: hidden;
}

.left-section > img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.img-logo {
  position: absolute;
  top: -11px;
  right: 502px;
  width: 161px; /* Adjust based on your logo size */
  height: auto;
  z-index: 5;
}
    </style>
</head>

<body>

    <div class="split">
        <div class="left-side">
            <div class="login-form">
                <h2>Welcome back!</h2>
                <p>Enter your Credentials to access your account</p>

                <form id="loginForm" action="/login" method="POST">
                    <div class="mb-3">
                        <label>Email address</label>
                        <input type="email" name="email" class="form-control" placeholder="Enter your email">
                    </div>

                    <div class="mb-3">
                        <label>Password</label> <a href="/forgot-password" class="forgot-link">forgot password</a>
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <%if(message){%>
                        <div class="alert alert-danger text-center">
                            <%=message%>
                        </div>
                        <% } %>
                        <button type="submit" class="btn btn-login w-100">Login</button>
                </form>

                <div class="divider">or</div>

                <a href="/auth/google" class="google-btn">
                    <img src="https://img.icons8.com/color/16/000000/google-logo.png" />
                    Sign in with Google
                  </a>

                <div class="signup-text text-center">
                    Donâ€™t have an account? <a href="/signup">Sign Up</a>
                </div>
            </div>
        </div>
         <div class="left-section">
                <div class="top-nav-top">
            <img  class="img-logo" src="images\logo_forWhite.png" alt="luxelook-logo">
        </div  class="top-nav-bottom">
          <img src="\wallpaper\signup_image.jpeg" alt="LuxeLook Logo">
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.getElementById('loginForm').addEventListener('submit', function (e) {
    const email = this.email.value.trim();
    const password = this.password.value.trim();

    if (!email || !password) {
      e.preventDefault();

      Swal.fire({
        icon: 'error',
        title: 'Missing Fields',
        text: 'Please enter both email and password.'
      });
    } else if (!validateEmail(email)) {
      e.preventDefault();

      Swal.fire({
        icon: 'error',
        title: 'Invalid Email',
        text: 'Please enter a valid email address.'
      });
    }
  });

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email.toLowerCase());
  }
</script>

</body>

</html>