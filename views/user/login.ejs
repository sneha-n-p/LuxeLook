<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login - LuxeLook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* ================================
           DESKTOP: SPLIT SCREEN
        ================================= */
        .split {
            display: flex;
            height: 100vh;
        }

        .left-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fbf7f2;
            padding: 40px;
            position: relative;
        }

        .right-side {
            flex: 1;
            background: url('/images/login-image.png') no-repeat center center/cover;
        }

        /* Login form styling */
        .login-form {
            width: 100%;
            max-width: 380px;
        }

        .login-form h2 {
            font-weight: 700;
            margin-bottom: 12px;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login {
            background-color: #04384c;
            color: white;
            font-weight: 600;
            border-radius: 8px;
            padding: 10px;
        }

        .btn-login:hover {
            background-color: #032c3b;
        }

        .forgot-link {
            float: right;
            font-size: 0.9rem;
            color: #26c6da;
        }

        .google-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 8px;
        }

        /* ⭐ Mobile Logo (hidden in desktop) */
        .mobile-logo {
            display: none;
            width: 180px;
            margin: 0 auto 20px auto;
        }

        .right-side {
            flex: 1;
            background-color: #fce9e4;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            /* Make it a positioning context */
            overflow: hidden;
        }

        .right-side>img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .Error-message { 
            color: red; 
            font-size: 0.9rem;
             margin-top: 4px; 
             display: none;
             }
        /* ================================
           MOBILE RESPONSIVE
        ================================= */
        @media (max-width: 768px) {

            /* Hide right-side completely */
            .right-side {
                display: none !important;
            }

            /* Stack layout */
            .split {
                flex-direction: column;
                height: auto;
            }

            /* Left-side takes full width */
            .left-side {
                width: 100%;
                padding: 50px 35px;
            }

            /* Show small logo */
            .mobile-logo {
                display: block;
            }

            .login-form {
                max-width: 100%;
            }
            .Error-message { color: red; font-size: 0.9rem; margin-top: 4px; display: none; }
        }
    </style>
</head>

<body>

    <div class="split">

        <!-- LEFT SIDE FORM -->
        <div class="left-side">
            <div class="login-form">

                <!-- ⭐ Mobile-only logo -->
                <img src="/images/logo_forWhite.png" class="mobile-logo" alt="LuxeLook Logo">

                <h2>Welcome back!</h2>
                <p>Enter your credentials to access your account</p>

                <form id="loginForm" method="POST" action="/login">

                    <div class="mb-3">
                        <label>Email address</label>
                        <div id="LoginError1" class="Error-message"></div>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email">
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <a href="/login/forgot-password" class="forgot-link">Forgot password?</a>
                        <div id="LoginError2" class="Error-message"></div>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Password">
                    </div>
                    <% if (message) { %>
                        <div style="color:red;"></div>
                        <% } %>
                            <button onclick="Login(event)" class="btn btn-login w-100">Login</button>
                </form>

                <div class="divider text-center my-4">or</div>

                <a href="/auth/google" class="google-btn">
                    <img src="https://img.icons8.com/color/20/000000/google-logo.png" />
                    Sign in with Google
                </a>

                <div class="signup-text text-center mt-3">
                    Don’t have an account? <a href="/signup">Sign Up</a>
                </div>
            </div>
        </div>

        <!-- RIGHT SIDE IMAGE (hidden on mobile) -->
        <div class="right-side">
            <img class="img-logo" src="images/logo_forWhite.png">

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const loginForm = document.getElementById('loginForm');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const error1 = document.getElementById('LoginError1');
        const error2 = document.getElementById('LoginError2');

        // ✅ Email validation
        function validateEmailField() {
            const emailValue = emailInput.value.trim();
            const emailPattern = /^[^\s@]+@(gmail\.com|yahoo\.com|outlook\.com|hotmail\.com|protonmail\.com)$/;

            if (!emailValue) {
                error1.textContent = "Email is required";
                error1.style.display = "block";
                return false;
            } else if (!emailPattern.test(emailValue)) {
                error1.textContent = "Invalid email format (only Gmail allowed)";
                error1.style.display = "block";
                return false;
            } else {
                error1.style.display = "none";
                return true;
            }
        }

        // ✅ Password validation
        function validatePasswordField() {
            const passwordValue = passwordInput.value.trim();
            if (!passwordValue) {
                error2.textContent = "Password is required";
                error2.style.display = "block";
                return false;
            } else {
                error2.style.display = "none";
                return true;
            }
        }

        // ✅ Realtime validation
        emailInput.addEventListener("input", validateEmailField);
        passwordInput.addEventListener("input", validatePasswordField);

        document.addEventListener("DOMContentLoaded", () => {
    <% if (message) { %>
                Swal.fire({
                    icon: 'error',
                    text: "<%= message %>",
                    confirmButtonColor: '#04384c'
                });
                // Remove ?error=... from URL so it doesn’t persist
                const url = new URL(window.location);
                url.searchParams.delete('error');
                window.history.replaceState({}, document.title, url.pathname);
    <% } %>
  });

        // ✅ Final Login Function
        async function Login(e) {
            e.preventDefault(); // stop default form submission
            const isEmailValid = validateEmailField();
            const isPasswordValid = validatePasswordField();

            if (!isEmailValid || !isPasswordValid) {
                return;
            }

            try {
                axios.post('/login', {
                    email: emailInput.value.trim(),
                    password: passwordInput.value.trim()
                }).then((response) => {
                    console.log('res', response.response)
                    if (response.data.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Login successful!",
                            showConfirmButton: false,
                            timer: 1500
                        });
                        setTimeout(() => {
                            window.location.href = "/";
                        }, 1500);
                    } else {
                        Swal.fire({
                            icon: 'error',
                            text: response.data.message,
                            timer: 1500
                        })
                    }
                }).catch((err) => {
                    console.log(err)
                    Swal.fire({
                        icon: 'error',
                        text: err.response.data.message,
                        timer: 1500
                    })
                })
            } catch (err) {
                if (err.response && err.response.data && err.response.data.message) {
                    error2.textContent = err.response.data.message;
                    error2.style.display = "block";
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Login failed",
                        text: res.data.message
                    });
                }
            }
        }

        // ✅ Attach login to form submit
        loginForm.addEventListener("submit", Login);


    </script>

</body>

</html>