<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Reset Email | LuxeLook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fff;
    }

    .email-banner {
      background: url('/images/profile-banner.jpg') center/cover no-repeat;
      height: 300px;
      position: relative;
    }

    .email-header {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 42px;
      font-weight: 600;
      color: #000;
    }

    .email-box {
      max-width: 500px;
      margin: 60px auto;
      padding: 30px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
      border-radius: 10px;
      background: #fff;
    }

    .email-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 20px;
      text-align: center;
    }

    .submit-btn {
 background: linear-gradient(90deg, #B5654B  , #D17C63 );
      color: white;
      padding: 10px 30px;
      border: none;
      border-radius: 25px;
      display: block;
      margin: 20px auto 10px;
      transition: 0.3s;
    }

    .submit-btn:hover {
 background: linear-gradient(90deg, #B5654B  , #D17C63 );
    }
    .back-arrow-btn {
    position: absolute;
    top: 60px;
    left: 50px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    border-radius: 50%;
    width: 45px;
    height: 45px;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .back-arrow-btn:hover {
    background-color: #B5654B;
    color: white;
    transform: scale(1.1);
  }
  </style>
</head>

<body>

  <!-- Banner/Header -->
  <div class="email-banner">
    <button onclick="window.history.back()" class="back-arrow-btn">
            &#8592;
        </button>
    <div class="email-header">RESET EMAIL</div>
  </div>

  <!-- Reset Email Box -->
  <div class="email-box" style="background-color: #F2E8DC;">
    <div class="email-title">Enter your new email address</div>
    <form action="/profile/change-email" id="resetEmailForm" method="POST">
      <div class="mb-3">
        <input type="email" name="newEmail" class="form-control" id='newEmail' placeholder="New Email Address" required>
      </div>
      <button type="submit" class="submit-btn">Update Email</button>
    </form>
  </div>



  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
<script>
  const emailInput = document.getElementById('newEmail');
  const emailForm = document.getElementById('resetEmailForm');

  const emailPattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;

  emailInput.addEventListener('input', () => {
    const email = emailInput.value.trim();
    if (!emailPattern.test(email)) {
      emailInput.classList.add('is-invalid');
    } else {
      emailInput.classList.remove('is-invalid');
    }
  });

  emailForm.addEventListener('submit', (e) => {
    e.preventDefault(); 

    const newEmail = emailInput.value.trim();

    if (!emailPattern.test(newEmail)) {
      Swal.fire({
        icon: "error",
        title: "Invalid Email",
        text: "Please enter a valid Gmail address (example@gmail.com)",
        confirmButtonColor: "#B5654B"
      });
      return; 
    }

    emailForm.submit();
  });
</script>


</body>

</html>