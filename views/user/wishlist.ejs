<style>
  body {
    background-color: #FFF8F3;
    font-family: 'Poppins', sans-serif;
    color: #1a1a1a;
  }

  .banner h1 {
    color: #000;
    padding-top: 160px;
    font-size: 3rem;
    text-align: center;
  }

  .wishlist-table {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #ddd;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.07);
  }

  .wishlist-table th {
    background: linear-gradient(135deg, #515252, black);
    color: #fff;
    padding: 15px;
    font-size: 16px;
  }

  .wishlist-table td {
    vertical-align: middle;
    padding: 15px;
    color: #fff;
  }

  .wishlist-product-img {
    height: 120px;
    width: 100px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid #ccc;
    transition: transform 0.3s ease;
  }

  .wishlist-product-img:hover {
    transform: scale(1.05);
  }

  .add-cart-btn,
  .delet-cart-btn {
    font-size: 14px;
    padding: 8px 16px;
    border-radius: 25px;
    border: none;
    transition: all 0.3s ease;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
  }

  .add-cart-btn {
    background: linear-gradient(135deg, #414342, black);
    color: #fff;
  }

  .add-cart-btn:hover {
    background: linear-gradient(135deg, #414342, black);
    transform: translateY(-1px);
  }

  .delet-cart-btn {
    background: linear-gradient(135deg, #e63946, #9d0208);
    color: #fff;
  }

  .delet-cart-btn:hover {
    background: linear-gradient(135deg, #f75c5c, #b10d0d);
    transform: translateY(-1px);
  }

  .Empty-wishlist {
    text-align: center;
    padding: 60px 20px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 12px;
    margin: 50px auto;
    max-width: 500px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
  }

  .Empty-wishlist span {
    font-size: 30px;
    font-weight: 600;
    color: #333;
  }

  .Empty-wishlist button {
    background: linear-gradient(135deg, #414342, #000);
    color: #fff;
    border: none;
    padding: 10px 25px;
    border-radius: 25px;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s ease;
  }

  .Empty-wishlist button:hover {
    background: linear-gradient(135deg, #959898, #2e2e2e);
  }

  /* Sticky pagination */
  .sticky-pagination {
    position: sticky;
    bottom: 0;
    background-color: #fff;
    padding: 15px 0;
    z-index: 100;
    border-top: 1px solid #eee;
  }

  .page-link {
    background-color: black !important;
    color: #fff !important;
    border: 1px solid black !important;
    border-radius: 50% !important;
    margin: 0 3px;
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    transition: 0.3s ease;
  }

  .page-link:hover {
    background-color: black !important;
    border-color: black !important;
  }

  .page-item.active .page-link {
    background-color: black !important;
    border-color: black !important;
  }

  .text-danger {
    color: #e63946 !important;
    font-weight: 600;
  }

  .btn-outline-dark {
    border-radius: 50px;
    padding: 6px 18px;
    font-size: 0.9rem;
    background: linear-gradient(90deg, #B5654B, #D17C63);
    border: none;
  }

  .btn-outline-dark:hover {
    background-color: #333;
  }

  .back-arrow-btn {
  position: absolute;
  top: 20px;          /* smaller consistent spacing */
  left: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 1.4rem;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10;
}

.back-arrow-btn:hover {
  background-color: #B5654B;
  transform: scale(1.1);
}

/* ‚≠ê Mobile Fix: Move arrow up slightly */
@media (max-width: 768px) {
  .back-arrow-btn {
    top: 10px;
    left: 10px;
    width: 38px;
    height: 38px;
    font-size: 1.2rem;
  }
}

/* ‚≠ê Extra small screens */
@media (max-width: 480px) {
  .back-arrow-btn {
    top: 8px;
    left: 8px;
    width: 34px;
    height: 34px;
    font-size: 1rem;
  }
}


  /*  MOBILE WISHLIST CARD GRID ‚Äî SHOW IN MOBILE ONLY */
  @media (max-width: 768px) {

    .wishlist-table {
      display: none !important;
    }

    .wishlist-mobile-grid {
      display: grid !important;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .wishlist-card {
      background: #fff;
      border-radius: 12px;
      padding: 10px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

    .wishlist-card img {
      width: 100%;
      height: 160px;
      border-radius: 8px;
      object-fit: cover;
    }

    .wishlist-card-title {
      font-size: 0.9rem;
      font-weight: 600;
      margin-top: 6px;
      color: #222;
    }

    .wishlist-card-price {
      color: #000;
      font-weight: 700;
      margin-top: 4px;
      font-size: 1rem;
    }

    .wishlist-card-btn {
      background: linear-gradient(90deg, #B5654B, #D17C63);
    color: white;
    padding: 8px 22px;
    border-radius: 25px;
    margin: 5px;
    font-size: 15px;
    text-decoration: none;
    display: inline-block;
    }

    .wishlist-delete-btn {
      position: absolute;
      top: 6px;
      right: 6px;
      border: none;
      color: rgb(124, 4, 4);
      border-radius: 50%;
      width: 32px;
      height: 32px;
      font-size: 20px;
    }

    /* Mobile pagination */
    .sticky-pagination {
      padding: 0;
    }

  }

  /* DESKTOP‚Äì mobile grid hidden */
  .wishlist-mobile-grid {
    display: none;
  }
  /* MOBILE BANNER FIX */
.wishlist-banner {
  height: 417px;
  object-fit: cover;
}

 @media (max-width: 768px) {
    .sidebar { display: none !important; }
    .mobile-settings-bar { display: flex; justify-content: space-between; }

    .wishlist-banner {
    height: 220px !important;
    width: 100% !important;
    object-fit: cover !important;
  }
  .banner-text{
    margin-top: -30%;
  }
  }
</style>


