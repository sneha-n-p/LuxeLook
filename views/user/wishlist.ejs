    <section class="hero text-center bg-light p-0 mb-4">
      <img src="\wallpaper\pageBanner-1.jpg" alt="Shop Banner" class="wishlist-banner img-fluid w-100"
        style="height: 417; object-fit: cover;">
       
      <button onclick="window.history.back()" class="back-arrow-btn">
        &#8592;
      </button>
      <h1 class="banner-text position-absolute top-50 start-50 translate-middle text-white fw-bold display-4 shadow-lg"
        style="text-shadow: 2px 2px 8px black;">WHISHLIST</h1>
    </section>

    <div class="container my-5">

  <% if (wishlist.length > 0) { %>

    <!-- DESKTOP TABLE (unchanged) -->
    <table class="table wishlist-table text-center">
      <thead>
        <tr>
          <th style="color:#fff;">Image</th>
          <th style="color:#fff;">Product</th>
          <th style="color:#fff;">Price</th>
          <th style="color:#fff;">Action</th>
        </tr>
      </thead>
      <tbody>
        <% wishlist.forEach(product => { %>
          <tr>
            <td><img src="<%= product.productImage[0] %>" class="wishlist-product-img"></td>

            <td>
              <strong><%= product.productName %></strong><br>
              <small><%= product.description %></small><br>
              <% if (product.quatity === 0) { %>
                <p class="text-danger fw-bold">Out of Stock</p>
              <% } %>
            </td>

            <td>‚Çπ<%= product.regularPrice %></td>

            <td>
              <a href="/shop/product-details/<%= product._id %>">
                <button class="add-cart-btn">View Details</button>
              </a>
              <button class="delet-cart-btn" onclick="confirmRemove('<%= product._id %>')">&#128465;</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- üì± MOBILE GRID VIEW -->
    <div class="wishlist-mobile-grid">

      <% wishlist.forEach(product => { %>

        <div class="wishlist-card position-relative">

          <!-- DELETE BUTTON -->
          <button class="wishlist-delete-btn background-color-red"
            onclick="confirmRemove('<%= product._id %>')" >x</button>

          <!-- IMAGE -->
          <img src="<%= product.productImage[0] %>" />

          <!-- TITLE -->
          <p class="wishlist-card-title"><%= product.productName %></p>

          <!-- PRICE -->
          <p class="wishlist-card-price">‚Çπ<%= product.regularPrice %></p>

          <!-- BUTTON -->
          <a class="wishlist-card-btn" href="/shop/product-details/<%= product._id %>">
            View Details
          </a>

        </div>

      <% }) %>

    </div>

    <!-- Pagination -->
    <div class="sticky-pagination d-flex justify-content-between align-items-center mt-3">
      <div>Showing <%= currentPage %> of <%= totalPages %></div>
      <nav>
        <ul class="pagination mb-0">
          <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">‚Äπ</a>
          </li>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>

          <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">‚Ä∫</a>
          </li>
        </ul>
      </nav>
    </div>

  <% } else { %>

    <!-- EMPTY STATE -->
    <div class="Empty-wishlist" style="background-color: #F2E8DC;">
      <span>Your Wishlist Is Empty</span>
      <br><br>
      <a href="/shop"><button>Discover Now</button></a>
    </div>

  <% } %>

</div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      function confirmRemove(productId) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, remove it!"

        }).then((result) => {
          if (result.isConfirmed) {
            axios.post('/wishlist/removeFromWishlist', { productId })
              .then(response => {
                if (response.data.success) {
                  Swal.fire({
                    title: "Removed",
                    icon: "success",
                    showConfirmButton: false,
                    timer: 1500
                  });

                  setTimeout(() => {
                    location.reload();
                  }, 1600);
                } else {
                  Swal.fire({
                    title: "Error",
                    icon: "error",
                    text: response.data.message,
                    showConfirmButton: false,
                    timer: 1500
                  });
                }
              })
              .catch(() => {
                Swal.fire({
                  title: "Error",
                  icon: "error",
                  text: "Internal Server Error",
                  showConfirmButton: false,
                  timer: 1500
                });
              });
          }
        });
      }


