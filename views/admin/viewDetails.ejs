<%- include("../../views/partials/adminPartial/header") %>

<!-- ✅ Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<body class="font-[Inter] bg-gradient-to-br from-[#1a1a1a] to-[#2c2c2c] text-gray-200 m-0 p-0">

<!-- ===========================
          CONTENT WRAPPER
=========================== -->
<div class="lg:ml-[240px] ml-0 p-4 lg:p-10 min-h-screen flex flex-col items-center">

    <!-- Go Back button -->
    <div class="flex justify-between w-full mb-6">
        <button 
            onclick="window.history.back()" 
            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md shadow">
            ⬅ Go Back
        </button>
    </div>

    <h1 class="text-3xl font-bold mb-6">Order Details</h1>

    <!-- ORDER MAIN CARD -->
    <div class="bg-[#2a2a2a] p-6 rounded-xl max-w-4xl w-full shadow-lg border border-gray-700">

        <p><strong>Order ID:</strong> #<%= order.orderId %></p>
        <p><strong>Order Date:</strong> <%= new Date(order.createdOn).toLocaleString() %></p>

        <!-- ===============================
                 ORDERED ITEMS
        =============================== -->
        <% order.orderedItems.forEach(item => { %>

        <!-- Responsive Product Card -->
        <div class="bg-[#1f1f1f] border border-gray-700 mt-5 p-4 rounded-lg shadow-md 
                    hover:shadow-xl hover:-translate-y-1 transition">

            <div class="flex flex-col sm:flex-row gap-5">

                <!-- Image -->
                <img src="<%= item.productImage %>" 
                     class="w-full sm:w-40 h-40 object-cover rounded-md border border-gray-700" />

                <!-- Details -->
                <div class="flex flex-col justify-between w-full">

                    <div>
                        <h2 class="text-xl font-semibold text-white mb-1"><%= item.productName %></h2>
                        <p><strong>Qty:</strong> <%= item.quantity %></p>
                        <p><strong>Size:</strong> <%= item.size %></p>
                        <p><strong>Price:</strong> ₹<%= item.price.toLocaleString() %></p>
                        <p><strong>Status:</strong> <%= item.status %></p>

                        <% if (item.status == "Return Request") { %>
                            <p class="text-yellow-400">
                                <strong>Return Reason:</strong> <%= item.returnReason %>
                            </p>
                        <% } %>

                        <% if (item.status == "Cancelled") { %>
                            <p class="text-red-400">
                                <strong>Cancel Reason:</strong> <%= item.cancelReason %>
                            </p>
                        <% } %>
                    </div>

                    <!-- Buttons (Mobile Friendly) -->
                    <% if (item.status == "Return Request") { %>
                    <div class="flex flex-col sm:flex-row gap-3 mt-4">

                        <button class="w-full bg-green-600 hover:bg-green-700 py-2 rounded-md"
                            onclick="acceptSingle('<%= item.product %>','<%= order._id %>')">
                            Accept Return
                        </button>

                        <button class="w-full bg-red-600 hover:bg-red-700 py-2 rounded-md"
                            onclick="rejectSingle('<%= item.product %>','<%= order._id %>')">
                            Reject Return
                        </button>

                    </div>
                    <% } %>

                </div>
            </div>
        </div>

        <% }) %>

        <!-- ===============================
               SHIPPING ADDRESS
        =============================== -->
        <div class="bg-[#333] p-4 rounded-lg mt-6 border border-gray-700">
            <h3 class="text-xl font-semibold mb-2">Shipping Address</h3>
            <p><strong>Name:</strong> <%= order.address[0].name %></p>
            <p><strong>Address:</strong> <%= order.address[0].streetAddress %>, <%= order.address[0].city %>, <%= order.address[0].state %> - <%= order.address[0].pincode %></p>
            <p><strong>Phone:</strong> <%= order.address[0].phone %></p>
            <p><strong>Type:</strong> <%= order.address[0].addressType %></p>
        </div>

        <!-- ===============================
                 STATUS TIMELINE
        =============================== -->
        <div class="bg-[#222] p-4 rounded-lg mt-6 border border-gray-700">

            <% 
            const statusTimeline = [
                { title: 'Order Placed', description: 'Your order has been placed.', completed: ['Pending','Shipped','Out For Delivery','Delivered','Return Request','Returned'].includes(order.status) },
                { title: 'Shipped', completed: ['Shipped','Out For Delivery','Delivered','Return Request','Returned'].includes(order.status) },
                { title: 'Out For Delivery', completed: ['Out For Delivery','Delivered','Return Request','Returned'].includes(order.status) },
                { title: 'Delivered', completed: ['Delivered','Return Request','Returned'].includes(order.status) },
                { title: 'Return Request', completed: ['Return Request','Returned'].includes(order.status) },
                { title: 'Returned', completed: order.status === 'Returned' }
            ];
            %>

            <% statusTimeline.forEach(status => { %>
            <div class="flex items-start gap-3 mb-4">
                
                <div class="w-4 h-4 rounded-full mt-1 
                    <%= status.completed ? 'bg-green-500 shadow-green-500 shadow' : 'bg-gray-500' %>">
                </div>

                <div>
                    <p class="font-semibold"><%= status.title %></p>
                    <p class="text-gray-400 text-sm"><%= status.description || '' %></p>
                </div>

            </div>
            <% }) %>
        </div>

        <!-- ===============================
                    AMOUNT BOX
        =============================== -->
        <div class="bg-[#333] p-4 rounded-lg mt-6 text-right border border-gray-700">
            <p class="text-lg font-semibold">Amount Details</p>
            <p>Subtotal: ₹<%= order.totalPrice.toLocaleString() %></p>
            <p>Discount: ₹<%= order.discount.toLocaleString() %></p>
            <p class="font-bold text-white text-xl">Total: ₹<%= order.finalAmount.toLocaleString() %></p>
        </div>

        <!-- ===============================
               ORDER STATUS BUTTONS
        =============================== -->
        <% if (order.status === 'Return Request') { %>

        <div class="mt-6 p-4 bg-[#1f1f1f] rounded-lg border border-gray-700">
            <p class="text-yellow-400 mb-3">
                <strong>Return Requested Reason:</strong> <%= order.returnReason %>
            </p>

            <div class="flex flex-col sm:flex-row gap-3">
                <button class="bg-green-600 hover:bg-green-700 py-2 rounded-md w-full"
                        onclick="accept('<%= order._id %>')">
                    Accept Return
                </button>

                <button class="bg-red-600 hover:bg-red-700 py-2 rounded-md w-full"
                        onclick="reject('<%= order._id %>')">
                    Reject Return
                </button>
            </div>
        </div>

        <% } else if (order.status === 'Cancelled') { %>

        <button class="bg-red-800 text-white py-3 mt-5 rounded-md w-full opacity-60 cursor-not-allowed">
            Cancelled
        </button>

        <% } else if (!['Delivered','Returned'].includes(order.status)) { %>

        <button id="updateStatus" data-id="<%= order._id %>"
                class="bg-cyan-600 hover:bg-cyan-700 py-3 w-full mt-6 rounded-md text-white font-medium">
            Update Status
        </button>

        <input id="hiddenOID" value="<%= order._id %>" hidden>

        <% } %>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    const button = document.getElementById('updateStatus')
    if (button) {
        button.addEventListener('click', async () => {
            const orderId = document.getElementById('hiddenOID').value

            if ("<%= order.status %>" === "Delivered") {
                Swal.fire('Not Allowed', 'Delivered orders cannot be updated.', 'warning');
                return;
            }

            const { value: status } = await Swal.fire({
                title: 'Update Order Status',
                input: 'select',
                inputOptions: {
                    'Pending': 'Pending',
                    'Shipped': 'Shipped',
                    'Out For Delivery': 'Out For Delivery',
                    'Delivered': 'Delivered',
                },
                inputPlaceholder: 'Select a status',
                showCancelButton: true
            });

            if (status) {
                try {
                    const response = await fetch('/admin/orders/update-order-status', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, newStatus: status })
                    });

                    const result = await response.json();
                    if (result.success) {
                        Swal.fire('Success', result.message, 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', result.message, 'error');
                    }
                } catch (error) {
                    console.error('Fetch error:', error);
                    Swal.fire('Error', 'Something went wrong!', 'error');
                }
            }
        });
    }

    function accept(orderId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to accept the return request?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, accept it!",
            cancelButtonText: "No, cancel",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                axios.patch('/admin/orders/verify-return', {
                    orderId,
                    action: 'Returned'
                })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire("Accepted!", response.data.message, "success").then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire("Error", response.data.message, "error");
                    }
                })
                .catch(error => {
                    console.error("AXIOS ERROR:", error.response?.data || error.message);
                    Swal.fire("Error", "Something went wrong.", "error");
                });
            }
        });
    }

    function reject(orderId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to reject the return request?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, reject it!",
            cancelButtonText: "No, cancel",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                axios.patch('/admin/orders/verify-return', {
                    orderId,
                    action: 'Delivered'
                })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire("Rejected!", response.data.message, "success").then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire("Error", response.data.message, "error");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    Swal.fire("Error", "Something went wrong.", "error");
                });
            } else {
                Swal.fire("Cancelled", "Return request was not rejected.", "info");
            }
        });
    }

    function acceptSingle(productId,orderId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to accept the return request?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, accept it!",
            cancelButtonText: "No, cancel",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                axios.patch('/admin/orders/verify-single-return', {
                    productId,
                    orderId,
                    action: 'Returned'
                })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire("Accepted!", response.data.message, "success").then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire("Error", response.data.message, "error");
                    }
                })
                .catch(error => {
                    console.error("AXIOS ERROR:", error.response?.data || error.message);
                    Swal.fire("Error", "Something went wrong.", "error");
                });
            }
        });
    }

    function rejectSingle(productId,orderId) {
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to reject the return request?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, reject it!",
            cancelButtonText: "No, cancel",
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                axios.patch('/admin/orders/verify-single-return', {
                    productId,
                    orderId,
                    action: 'Delivered'
                })
                .then(response => {
                    if (response.data.success) {
                        Swal.fire("Rejected!", response.data.message, "success").then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire("Error", response.data.message, "error");
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    Swal.fire("Error", "Something went wrong.", "error");
                });
            } else {
                Swal.fire("Cancelled", "Return request was not rejected.", "info");
            }
        });
    }
</script>
</body>
</html>