<%-include("../../views/partials/adminPartial/header")%>
  <style>
    .search-bar::placeholder {
      color: #94a3b8;
    }

    .search-bar {
      border: none;
    }

    .table {
      color: #f1f5f9;
    }

    .table th {
      background-color: #000;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .table thead th {
      border-bottom: 2px solid #000000;
    }

    .table tbody tr {
      background-color: #1e293b;
      border-bottom: 1px solid #334155;
    }
  </style>
  <!-- Main content -->
  
  <div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Users</h2>
      <div class="d-flex align-items-center gap-3">
         <button 
  onclick="window.history.back()" 
  class="btn btn-secondary" 
  style= "color: white;">⬅ Go Back
</button>
      </div>
    </div>
    <div class="mb-4">
      <input type="text" id="productSearch" class="form-control search-bar" style="background-color: #1e293b;"
        placeholder="Search for Users">
    </div>
    <div class="card">
      <table class="table">
        <thead style="background: #000;">
          <tr>
            <th style="color: #fff;">User Image</th>
            <th style="color: #ffffff;">User Name</th>
            <th style="color: #fff;">Email</th>
            <th style="color: #fff;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user=> { %>
            <tr>
              <td><img src="<%= user.image %>" alt="User Image" style="height: 50px; border-radius: 5px; color:#000;">
              </td>
              <td style="color: #000;">
                <%= user.name %>
              </td>
              <td style="color: #000;">
                <%= user.email %>
              </td>
              <td id="action-<%= user._id %>">
                <% if(user.isBlocked) { %>
                  <button class="btn btn-unblock btn-sm" style="background-color: green; color: #fff;"
                    id="btn-<%= user._id %>" onClick="UnblockUser('<%= user._id %>', '<%= user.name %>')">
                    Unblock
                  </button>
                  <% } else { %>
                    <button class="btn btn-block btn-sm" style="background-color: red; color: #fff;"
                      id="btn-<%= user._id %>" onClick="BlockUser('<%= user._id %>', '<%= user.name %>')">
                      Block
                    </button>
                    <% } %>
              </td>

            </tr>
            <% }) %>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <div style="color: #fff;">Showing 1 of <%= totalPages %>
        </div>
        <nav>
          <ul class="pagination mb-0">
            <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">‹</a>
            </li>

            <% for (let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                  <%= i %>
                </a>
              </li>
              <% } %>

                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">›</a>
                </li>
          </ul>
        </nav>

      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <script>
    document.getElementById('productSearch').addEventListener('keyup', function () {


      const searchValue = this.value.toLowerCase();
      let rows = document.querySelectorAll('tbody tr');

      rows.forEach(row => {
        let productName = row.children[2].textContent.toLowerCase();
        if (productName.includes(searchValue)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });
    function BlockUser(id, name) {
      Swal.fire({
        title: 'Block User',
        text: "Do you want to block this user?",
        icon: "warning",
        showConfirmButton: true,
        showCancelButton: true
      }).then((result) => {
        if (result.isConfirmed) {
          axios.patch("/admin/blockUser", { id })
            .then(function (response) {
              if (response.data.success) {
                Swal.fire({
                  title: `${name} Blocked`,
                  icon: 'success',
                  showConfirmButton: false,
                  timer: 1500
                }).then(() => {
                  const actionEl = document.getElementById(`action-${id}`);
                  if (actionEl) {
                    actionEl.innerHTML = `
                  <button class="btn btn-unblock btn-sm" style="background-color: green; color: #fff;"
                    id="btn-${id}"
                    onClick="UnblockUser('${id}', '${name}')">
                    Unblock
                  </button>
                `;
                  }
                });
              }
            })
            .catch(() => {
              Swal.fire("Error", "Failed to block user", "error");
            });
        }
      });
    }

    function UnblockUser(id, name) {
      Swal.fire({
        title: "Unblock User",
        text: "Do you want to unblock this user?",
        icon: "warning",
        showConfirmButton: true,
        showCancelButton: true
      }).then((result) => {
        if (result.isConfirmed) {
          axios.patch("/admin/UnblockUser", { id })
            .then(function (response) {
              if (response.data.success) {
                Swal.fire({
                  title: `${name} Unblocked`,
                  icon: 'success',
                  showConfirmButton: false,
                  timer: 1500
                }).then(() => {
                  const actionEl = document.getElementById(`action-${id}`);
                  if (actionEl) {
                    actionEl.innerHTML = `
                  <button class="btn btn-block btn-sm" style="background-color: red; color: #fff;"
                    id="btn-${id}"
                    onClick="BlockUser('${id}', '${name}')">
                    Block
                  </button>
                `;
                  }
                });
              }
            })
            .catch(() => {
              Swal.fire("Error", "Failed to unblock user", "error");
            });
        }
      });
    }

  </script>

  </html>